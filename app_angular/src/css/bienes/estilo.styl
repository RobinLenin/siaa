/* Estilo comunes */
.suggestions_catalogo
  z-index:500;
  background: white;
  border: 1px solid #80B6E1;
  padding: 2px;
  float:none;
  width:90%;
  position:fixed;
  overflow-y: scroll;
  height: 350px; 

.table-scrollable
    margin: 0; padding: 0;

.buscaPersona
     padding-bottom: 35px;

.form-control-max
  width: 100%;

.panel-heading h3
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: normal;
    width: 75%;
    padding-top: 8px;

.shadowCard
    box-shadow: 10px 10px 5px #888888;

.img-avatar
    height: 150px;
    width: 150px;

.img-avatar-radius
    border-radius:25%;

.content
    margin-top: 20px;

/* Icono en el Input */
.inner-addon 
  position: relative;

.inner-addon .glyphicon 
  position: absolute;
  padding: 8px;
  pointer-events: none;

.left-addon .glyphicon 
  left: 0px;

.right-addon .glyphicon 
  right: 0px;

.left-addon input 
  padding-left: 40px;

.right-addon input 
  padding-right: 30px;

/* Colores de icon para el estado */
.material-icons.verde
  color: #42A948;

.material-icons.rojo
  color: #a94442;

.material-icons.orange
  color: #FB8C00;

